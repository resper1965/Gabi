FROM node:20-alpine

# Instalar dependências do sistema
RUN apk add --no-cache curl

# Configurar diretório de trabalho
WORKDIR /app

# Copiar arquivos de dependências
COPY services/gabi-panel/package.json ./
COPY services/gabi-panel/package-lock.json* ./

# Instalar dependências
RUN npm install

# Copiar código fonte
COPY services/gabi-panel/ ./

# Expor porta
EXPOSE 9000

# Comando de inicialização
CMD ["npm", "start"]
